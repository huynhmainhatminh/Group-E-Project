    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <style>
        /* Style cho modal popup */
        .model-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7); /* Màu nền mờ */
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        /* Dropdown Styles */
        .dropdown {
            position: relative;
            display: inline-block;
        }


        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            overflow: hidden;
            z-index: 1000;
            margin-top: 10px;
        }

            .dropdown-content a {
                color: #333;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                    color: #e74c3c; /* Đổi màu chữ khi hover */
                }

        /* Show dropdown on hover */
        .dropdown:hover .dropdown-content {
            display: block;
            animation: fadeIn 0.3s ease; /* Hiệu ứng fade in */
        }

        .popup {
            display: flex;
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 800px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .popup-left {
            flex: 1;
            padding-right: 20px;
            text-align: center;
        }

        .popup-left img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .popup-right {
            flex: 2;
            padding-left: 20px;
        }

        .popup-right table {
            width: 100%;
            border-collapse: collapse;
        }

        .popup-right table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-size: 16px;
            color: #333;
        }

        .popup-right table td:first-child {
            font-weight: bold;
            text-align: right;
            width: 30%;
            padding-right: 20px;
            color: #555;
        }

        .popup-right table td:last-child {
            text-align: left;
            padding-left: 20px;
            color: #000;
        }

        .close {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px; /* Thêm khoảng cách phía trên nút */
            align-self: flex-end; /* Đẩy nút về phía cuối cùng của popup */
        }

        .close:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
