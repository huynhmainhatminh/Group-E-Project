<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tư Vấn Cá Coi Phong Thủy</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
        integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="style.css?v=3">
    <style>
        /* Style cho modal popup */
        .model-popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7); /* Màu nền mờ */
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .popup {
            display: flex;
            background: white;
            padding: 20px;
            border-radius: 10px;
            width: 80%;
            max-width: 800px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .popup-left {
            flex: 1;
            padding-right: 20px;
            text-align: center;
        }

        .popup-left img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .popup-right {
            flex: 2;
            padding-left: 20px;
        }

        .popup-right table {
            width: 100%;
            border-collapse: collapse;
        }

        .popup-right table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-size: 16px;
            color: #333;
        }

        .popup-right table td:first-child {
            font-weight: bold;
            text-align: right;
            width: 30%;
            padding-right: 20px;
            color: #555;
        }

        .popup-right table td:last-child {
            text-align: left;
            padding-left: 20px;
            color: #000;
        }

        .close {
            background-color: #f44336;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px; /* Thêm khoảng cách phía trên nút */
            align-self: flex-end; /* Đẩy nút về phía cuối cùng của popup */
        }

        .close:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>
    <div>
        <!-- Header cho PC -->
        <header class="pc">
            <div class="head-top">
                <a href="#" class="item-head">Điều Khoản chính sách</a>
                <a class="item-head" asp-area="" asp-controller="HomeCustomer" asp-action="Login">Đăng nhập</a>
                <a class="item-head" asp-area="" asp-controller="HomeCustomer" asp-action="Register">Đăng ký</a>
            </div>
            <div class="head-main">
                <div class="logo">
                    <img src="~/logo.png" alt="Logo Công ty">
                </div>
                <nav class="content-head">
                    <a class="active" asp-area="" asp-controller="HomeCustomer" asp-action="Index">TRANG CHỦ</a>
                    <a href="gioi-thieu.html">GIỚI THIỆU</a>
                    <div class="dropdown">
                        <a href="#">DỊCH VỤ</a>
                        <div class="dropdown-content">
                            <a href="#">Dịch Vụ 1</a>
                            <a href="#">Dịch Vụ 2</a>
                            <a href="#">Dịch Vụ 3</a>
                        </div>
                    </div>
                    <a href="#">TƯ VẤN</a>
                    <a href="#">LIÊN HỆ</a>
                </nav>
            </div>
        </header>
        @RenderBody()
        @await Html.PartialAsync("Footer")
    </div>
</body>
</html>
